<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/frame23"
    tools:context=".Signup"
    android:orientation="vertical"
    android:gravity="center_horizontal">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SIGN UP"
        android:fontFamily="@font/nats_regular"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:textSize="32sp"
        android:layout_marginVertical="10dp"/>

    <EditText
        android:id="@+id/new_name"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:hint="Full Name"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginHorizontal="40dp"
        android:fontFamily="@font/nats_regular"
        android:textSize="12sp"
        android:paddingHorizontal="20dp"
        android:paddingTop="10dp"
        android:background="@drawable/fullname_back"
        android:textColorHint="@color/white"
        android:textColor="@color/white"
        app:hintTextColor="@color/white"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/new_user_name"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:hint="Enter a Username"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginHorizontal="40dp"
        android:fontFamily="@font/nats_regular"
        android:textSize="12sp"
        android:paddingHorizontal="20dp"
        android:paddingTop="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/username_background"
        android:textColorHint="@color/white"
        android:textColor="@color/white"
        app:hintTextColor="@color/white"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/new_email"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:hint="Email ID"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginHorizontal="40dp"
        android:fontFamily="@font/nats_regular"
        android:textSize="12sp"
        android:paddingHorizontal="20dp"
        android:paddingTop="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/email_edit_back"
        android:textColorHint="@color/white"
        android:textColor="@color/white"
        app:hintTextColor="@color/white"
        android:inputType="textPersonName"/>

    <EditText
        android:id="@+id/new_password"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:hint="Password"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginHorizontal="40dp"
        android:fontFamily="@font/nats_regular"
        android:textSize="12sp"
        android:paddingHorizontal="20dp"
        android:paddingTop="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/password_background"
        android:textColorHint="@color/white"
        android:textColor="@color/white"
        app:hintTextColor="@color/white"
        android:inputType="textPassword"/>
<!--    new_phone_number-->
    <EditText
        android:id="@+id/new_phone_number"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:hint="Phone No"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginHorizontal="40dp"
        android:fontFamily="@font/nats_regular"
        android:textSize="12sp"
        android:paddingHorizontal="20dp"
        android:paddingTop="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/phone_background"
        android:textColorHint="@color/white"
        android:textColor="@color/white"
        app:hintTextColor="@color/white"
        android:inputType="number"/>
    <EditText
        android:id="@+id/dob"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginHorizontal="40dp"
        android:fontFamily="@font/nats_regular"
        android:textSize="12sp"
        android:paddingHorizontal="20dp"
        android:paddingTop="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/date_of_birth"
        android:textColorHint="@color/white"
        android:textColor="@color/white"
        app:hintTextColor="@color/white"
        android:inputType="date"
        android:hint="dd/mm/yyyy"/>
    <EditText
        android:id="@+id/age_background"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:hint="Age"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginHorizontal="40dp"
        android:fontFamily="@font/nats_regular"
        android:textSize="12sp"
        android:paddingHorizontal="20dp"
        android:paddingTop="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/age_background"
        android:textColorHint="@color/white"
        android:textColor="@color/white"
        app:hintTextColor="@color/white"
        android:inputType="number"/>

    <EditText
        android:id="@+id/new_height"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:hint="Height"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginHorizontal="40dp"
        android:fontFamily="@font/nats_regular"
        android:textSize="12sp"
        android:paddingHorizontal="20dp"
        android:paddingTop="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/height"
        android:textColorHint="@color/white"
        android:textColor="@color/white"
        app:hintTextColor="@color/white"
        android:inputType="number"/>
    <EditText
        android:id="@+id/new_weight"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:hint="Weight"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginHorizontal="40dp"
        android:fontFamily="@font/nats_regular"
        android:textSize="12sp"
        android:paddingHorizontal="20dp"
        android:paddingTop="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/weight_background"
        android:textColorHint="@color/white"
        android:textColor="@color/white"
        app:hintTextColor="@color/white"
        android:inputType="number"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <RadioButton
            android:id="@+id/agree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_regular"
            android:textColor="@color/white"
            android:text="I agree to Infit's "
            android:textSize="8sp"
            android:buttonTint="@color/white"
            android:paddingStart="7dp"/>
        <TextView
            android:id="@+id/term"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:fontFamily="@font/roboto_regular"
            android:text="Terms and Conditions"
            android:textAlignment="center"
            android:textColor="#254396"
            android:textSize="8sp"/>
    </LinearLayout>
    <Button
        android:id="@+id/signbtn"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        android:clickable="false"
        android:fontFamily="@font/nats_regular"
        android:text="Create an Account"
        android:textAllCaps="false"
        android:textColor="#2F3D96"
        android:textSize="14sp"
        app:cornerRadius="10sp"/>

    <TextView
        android:id="@+id/memlog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Already a member? Login"
        android:fontFamily="@font/nats_regular"
        android:textSize="12sp"
        android:clickable="true"
        android:layout_marginBottom="10dp"/>
</LinearLayout>
</ScrollView>