<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="counts_style">
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_width">100dp</item>
        <item name="android:background">@drawable/graph_button</item>
        <item name="android:layout_marginVertical">7dp</item>
        <item name="android:padding">5dp</item>
    </style>

    <style name="enter_food_time">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#4A4A4A</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:fontFamily">@font/nats_regular</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="customSeekbar">
        <item name="colorAccent">#1D5368</item>
        <item name="android:width">10dp</item>
        <item name="android:height">10dp</item>
    </style>

    <style name="day_style">
        <item name="android:textColor">#748D95</item>
        <item name="android:textSize">13sp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="fontFamily">@font/baloo2</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="date_style">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:paddingTop">3dp</item>
        <item name="fontFamily">@font/baloo2</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>